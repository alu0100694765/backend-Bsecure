doctype html
html
  head
    link(href='http://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css', rel='stylesheet', type='text/css')
    link(href='//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.2.0/css/datepicker.min.css', rel='stylesheet', type='text/css')
    link(href='//cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/1.8/css/bootstrap-switch.css', rel='stylesheet', type='text/css')
    link(href='http://davidstutz.github.io/bootstrap-multiselect/css/bootstrap-multiselect.css', rel='stylesheet', type='text/css')
    script(src='//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js', type='text/javascript')
    script(src='//cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.0/js/bootstrap.min.js', type='text/javascript')
    script(src='//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.2.0/js/bootstrap-datepicker.min.js', type='text/javascript')
    script(src='//cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/1.8/js/bootstrap-switch.min.js', type='text/javascript')
    script(src='http://davidstutz.github.io/bootstrap-multiselect/js/bootstrap-multiselect.js', type='text/javascript')
  body
    .container
      .panel.panel-primary.dialog-panel
        .panel-heading
          h5 Almaguin Campground - Reservation
        .panel-body
          form.form-horizontal(role='form')
            .form-group
              label.control-label.col-md-2.col-md-offset-2(for='id_title') Name
              .col-md-8
                .col-md-2
                  .form-group.internal
                    select#id_title.form-control
                      option Mr
                      option Ms                    
                      option Mrs
                      option Miss
                      option Dr
                .col-md-3.indent-small
                  .form-group.internal
                    input#id_first_name.form-control(placeholder='First Name', type='text')
                .col-md-3.indent-small
                  .form-group.internal
                    input#id_last_name.form-control(placeholder='Last Name', type='text')
            .form-group
              label.control-label.col-md-2.col-md-offset-2(for='id_adults') Guests        
              .col-md-8
                .col-md-2
                  .form-group.internal
                    input#id_adults.form-control.col-md-8(placeholder='18+ years', type='number')
                .col-md-3.indent-small
                  .form-group.internal
                    input#id_children.form-control(placeholder='2-17 years', type='number')
                .col-md-3.indent-small
                  .form-group.internal
                    input#id_children_free.form-control(placeholder='< 2 years', type='number')
            .form-group
              label.control-label.col-md-2.col-md-offset-2(for='id_email') Contact
              .col-md-6
                .form-group
                  .col-md-11
                    input#id_email.form-control(placeholder='E-mail', type='text')
                .form-group.internal
                  .col-md-11
                    input#id_phone.form-control(placeholder='Phone: (xxx) - xxx xxxx', type='text')
            .form-group
              label.control-label.col-md-2.col-md-offset-2(for='id_checkin') Checkin
              .col-md-8
                .col-md-3
                  .form-group.internal.input-group
                    input#id_checkin.form-control.datepicker
                    span.input-group-addon
                      i.glyphicon.glyphicon-calendar
                label.control-label.col-md-2(for='id_checkout') Checkout
                .col-md-3
                  .form-group.internal.input-group
                    input#id_checkout.form-control.datepicker
                    span.input-group-addon
                      i.glyphicon.glyphicon-calendar
            .form-group
              label.control-label.col-md-2.col-md-offset-2(for='id_equipment') Equipment type
              .col-md-8
                .col-md-3
                  .form-group.internal
                    select#id_equipment.form-control
                      option Travel trailer
                      option Fifth wheel
                      option RV/Motorhome
                      option Tent trailer
                      option Pickup camper
                      option Camper van
                .col-md-9
                  .form-group.internal
                    label.control-label.col-md-3(for='id_slide') Slide-outs
                    #id_slide_switch.make-switch(data-off-label='NO', data-on-label='YES')
                      input#id_slide(type='checkbox', value='chk_hydro')
            .form-group
              label.control-label.col-md-2.col-md-offset-2(for='id_service') Required Service
              .col-md-8
                select#id_service.multiselect(multiple='multiple')
                  option(value='hydro') Hydro
                  option(value='water') Water
                  option(value='sewer') Sewer              
            .form-group
              label.control-label.col-md-2.col-md-offset-2(for='id_pets') Pets
              .col-md-8
                #id_pets_switch.make-switch(data-off-label='NO', data-on-label='YES')
                  input#id_pets(type='checkbox', value='chk_hydro')
            .form-group
              label.control-label.col-md-2.col-md-offset-2(for='id_comments') Comments
              .col-md-6
                textarea#id_comments.form-control(placeholder='Additional comments', rows='3')
            .form-group
              .col-md-offset-4.col-md-3
                button.btn-lg.btn-primary(type='submit') Request Reservation
              .col-md-3
                button.btn-lg.btn-danger(style='float:right', type='submit') Cancel
